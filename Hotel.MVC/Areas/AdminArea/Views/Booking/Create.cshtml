﻿@using Hotel.MVC.DTO.Booking;
@model BookingCreateDTO;

@{
    Layout = "_Layout";
}
<!-- Bootstrap CSS -->
<link href="~/assets_homepage/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
<link href="~/assets_homepage/css/tiny-slider.css" rel="stylesheet">
<link href="~/assets_homepage/css/style.css" rel="stylesheet">


<div class="card">
    <div class="card-header">
        <h3>Add Product</h3>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    </div>
    <div class="card-body">
        <form asp-action="Create" enctype="multipart/form-data">
            <div class="mb-3">
                <label asp-for="@Model.CheckIn" class="form-label">Giriş Tarihi</label>
                <input asp-for="@Model.CheckIn" class="form-control">
                <span asp-validation-for="@Model.CheckIn" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.CheckOut" class="form-label">Çıkış Tarihi</label>
                <input asp-for="@Model.CheckOut" class="form-control">
                <span asp-validation-for="@Model.CheckOut" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.HotelId" class="form-label">Select Hotel</label>
                <select asp-for="@Model.HotelId" class="form-control" asp-items="@ViewBag.Hotels">
                    <option value="">Select</option>
                </select>
                <span asp-validation-for="@Model.HotelId" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.RoomId" class="form-label">Select Rooms</label>
                <select asp-for="@Model.RoomId" class="form-control" asp-items="@ViewBag.Rooms">
                    <option value="">Select</option>
                </select>
                <span asp-validation-for="@Model.RoomId" class="text-danger"></span>
            </div>
           <div class="mb-3">
                <label asp-for="@Model.UserId" class="form-label">Select Users</label>
                <select asp-for="@Model.UserId" class="form-control" asp-items="@ViewBag.Users">
                    <option value="">Select</option>
                </select>
                <span asp-validation-for="@Model.UserId" class="text-danger"></span>
            </div>
           
            <div class="mb-3">
                <button type="submit" class="btn btn-success">Save</button>
                <button type="reset" class="btn btn-success">Reset</button>
            </div>
            <a class="btn btn-primary" asp-action="Index">Back</a>
        </form>
    </div>
</div>
